{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "types": ["unplugin-icons/types/vue"],
    "paths": {
      "~/*": ["./src/*"]
    },
    "isolatedModules": false,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["dom", "ES2022"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
