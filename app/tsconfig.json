{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "unplugin-icons/types/vue"
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
    "isolatedModules": false,
    "preserveValueImports": false,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "target": "ES2020",
    "lib": ["dom", "ES2022"],
    "allowJs": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
